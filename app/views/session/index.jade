extends ../layout


block content
    .row
        .one-third.column
            h2
                | Saved Sessions

    .row
        .two-thirds.column
            ul
                for session in sessions
                    li
                        a(href="/sessions/#{session.id}/feed")
                            | #{session.id}

                        small
                            span.session-details
                                |  #{session.visualizations.length} visualizations 
                            | |
                            span.session-details
                                |  Created May 25


            form(action="/sessions", method="post")
                input(type="submit", value="Create New Session")


