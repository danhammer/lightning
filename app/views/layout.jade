doctype html
html(lang="en")
    head
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        meta(http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE")
        meta(charset="UTF-8")
        block meta
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet', type='text/css')
        link(rel='stylesheet', href='#{STATIC_URL}css/app.css')
        block dynamic-css

body
    #lightning-body
        block header
        block sidebar    
            nav(role="navigation")#menu.panel

                .button-container
                    ul
                        li
                            a(href="/")
                                | Home
                        li
                            a(href="/sessions/create")
                                | New Session
                        li
                            a(href="/sessions")
                                | All Sessions
                        li
                            a(href="/visualization-types")
                                | Visualization Types
                        li
                            a(href="https://github.com/mathisonian/lightning", target="_blank")
                                | Github

                .side-color.menu-link
                    .logo
                        img(src="/images/lightning.svg")
        .container.content.wrap.push
            block content

    block absolute

    block scripts
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
        script(src='#{STATIC_URL}js/basic.js')